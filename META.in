name="batteries"
version="@VERSION@"
description="Batteries Included is a community-maintained standard library extension"
requires    ="batteries.unthreaded"
requires(mt)+="threads"
archive(toploop,mt)="batteriesThread.cma"
archive(byte,mt)   ="batteriesThread.cma"
archive(native,mt) ="batteriesThread.cmxa"
plugin(byte,mt)    ="batteriesThread.cma"
plugin(native,mt)  ="batteriesThread.cmxs"

package "unthreaded" (
 version="@VERSION@"
 description="Batteries Included (for use in unthreaded programs)"
 requires    ="num,camlp-streams,str,unix"
 archive(toploop)   ="batteries.cma batteriesConfig.cmo batteriesHelp.cmo batteriesPrint.cmo"
 archive(byte)      ="batteries.cma"
 archive(native)    ="batteries.cmxa"
 plugin(byte)       ="batteries.cma"
 plugin(native)     ="batteries.cmxs"
)
